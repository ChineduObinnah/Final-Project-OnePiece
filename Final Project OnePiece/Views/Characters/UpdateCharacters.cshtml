@model Characters

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateCharactersToDatabase", "Characters", "Post"))
{
    <input asp-for="ID" type="hidden" value="@Model.ID" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <label asp-for="Role" class="control-label">Role</label>
    <input type="text"  name="Role" class="form-control" value="@Model.Role" />
    
    <label asp-for="Bounty" class="control-label">Bounty</label>
    <input type="number" step="0.01" name="Bounty" class="form-control" value="@Model.Bounty" />

   @* <label asp-for="DevilFruit" class="control-label">DevilFruit</label>
    <input type="text"  name="DevilFruit" class="form-control" value="@Model.DevilFruit" />
*@
    <label asp-for="Title" class="control-label">Title</label>
    <input type="text" name="Title" class="form-control" value="@Model.Title" />

    <label asp-for="Haki" class="control-label">Haki</label>
    <input type="text"  name="Haki" class="form-control" value="@Model.Haki" />


    <input type="submit" value="Update Character" class="btn btn-primary" />
}